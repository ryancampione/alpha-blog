<h1 align="center">Sign up for Alpha Blog</h1>

<!-- notify the user of any errors -->
<%= render 'shared/errors', obj: @user %>

<!-- user sign-up form -->
<div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :username %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :username, class: "form-control", placeholder: "enter username", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :email %>
            </div>
            <div class="col-sm-8">
                <%= f.email_field :email, class: "form-control", placeholder: "enter email" %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :password %>
            </div>
            <div class="col-sm-8">
                <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-2">
                
            </div>
            
            <div class="col-sm-2">
                <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
            </div>
            
            <div class="col-sm-2">
                <%= link_to "Cancel", root_path, class: "btn btn-danger btn-lg" %>
            </div>
        </div>
    <% end %>
</div>