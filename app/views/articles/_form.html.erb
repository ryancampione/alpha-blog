<!-- notify the user of any errors -->
<% if @article.errors.any? %>
    <div class="row justify-content-md-center">
        <div class="col-8 col-offset-2">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">The following <%= pluralize(@article.errors.count, "error") %> prohibited this article from saving:</h5>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <ul>
                    <% @article.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
<% end%>

<!-- article form -->
<div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :title %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :description %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Body of article" %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-2">
                
            </div>
            
            <div class="col-sm-4">
                <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
            
            <div class="col-sm-4">
                <%= link_to "Cancel", articles_path, class: "btn btn-danger btn-lg" %>
            </div>
        </div>
    <% end %>
</div>

