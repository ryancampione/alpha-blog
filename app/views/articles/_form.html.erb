<!-- notify the user of any errors -->
<%= render 'shared/errors', obj: @article %>

<!-- article form -->
<div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :title %>
            </div>
            <div class="col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :description %>
            </div>
            <div class="col-sm-8">
                <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Body of article" %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-8 offset-2">
                <%= f.collection_check_boxes :category_ids, Category.all.sort_by(&:name), :id, :name do |cb| %>
                    <% cb.label(class: "form-check form-check-inline") {cb.check_box(class: "form-check-input") + cb.text} %>    
                <% end %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-6 offset-2">
                <%= f.submit class: "btn btn-primary btn-sm" %>
                <%= link_to "Cancel", articles_path, class: "btn btn-secondary btn-sm" %>
            </div>
        </div>
    <% end %>
</div>

